---
import Layout from '../layouts/layout.astro';
import TopBar from '../components/desktop/TopBar.astro';
import Panel from '../components/desktop/Panel.astro';
import BootSequence from '../components/desktop/BootSequence.astro';
import Terminal from '../components/apps/Terminal.astro';
import FileManager from '../components/apps/FileManager.astro';
import StyleManager from '../components/apps/StyleManager.astro';
import ProcessMonitor from '../components/apps/ProcessMonitor.astro';
---

<Layout title="Debian">
  <!-- Pantalla de boot -->
  <BootSequence />
  <!-- Escritorio CDE -->
  <div id="desktop-ui">
    <!-- Topbar -->
    <TopBar />

    <!-- Terminal -->
    <Terminal />

    <FileManager />

    <!-- Panel CDE -->
    <Panel />

    <!-- StyleManager -->
    <StyleManager />

    <!-- Process Monitor -->
    <ProcessMonitor />
  </div>
  <!-- cierre desktop-ui -->
</Layout>

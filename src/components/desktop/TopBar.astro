---
// src/components/desktop/TopBar.astro
---

<div id="topbar" role="banner" aria-label="Top bar">
  <div class="top-left"></div>
  <div class="top-right">
    <div
      class="sys-item"
      id="volume-icon"
      onclick="styleManager.openBeep()"
      role="button"
      tabindex="0"
      aria-label="Volume control"
    >
      <img src="/icons/devices/audio-volume-low.png" class="sys-icon" alt="audio" />
    </div>
    <div
      class="sys-item"
      style="cursor: pointer;"
      onclick="timeManager.open()"
      role="button"
      tabindex="0"
      aria-label="Clock and date"
    >
      <span id="clock" aria-live="off"></span>
    </div>
  </div>
</div>

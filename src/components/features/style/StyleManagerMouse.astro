---
import WindowControls from '../../common/WindowControls.astro';
import WindowMinimize from '../../common/WindowMinimize.astro';
---

<div class="cde-retro-modal style-manager-mouse" id="styleManagerMouse">
  <div
    class="titlebar"
    id="styleManagerMouseTitlebar"
    onmousedown="window.drag(event, 'styleManagerMouse')"
  >
    <WindowMinimize windowId="styleManagerMouse" />
    <span class="titlebar-text">Style Manager - Mouse</span>
    <WindowControls
      windowId="styleManagerMouse"
      closeFunction="styleManager.closeMouse"
      disableMaximize={true}
    />
  </div>

  <div class="modal-body">
    <div class="mouse-icon-row">
      <button class="mouse-icon-btn" onclick="styleManager.showMessage('Test Double-Click')">
        <canvas id="mouse-icon-canvas" width="110" height="135"></canvas>
      </button>

      <div class="mouse-controls-group">
        <div class="mouse-control-column">
          <span>Handedness:</span>
          <div class="mouse-radio-group">
            <label
              ><input
                type="radio"
                name="handedness"
                value="right"
                onclick="updateMouseSetting('handedness', 'right')"
                checked
              /> Right</label
            >
            <label
              ><input
                type="radio"
                name="handedness"
                value="left"
                onclick="updateMouseSetting('handedness', 'left')"
              /> Left</label
            >
          </div>
        </div>
        <div class="mouse-control-column">
          <span>Button 2:</span>
          <div class="mouse-radio-group">
            <label
              ><input
                type="radio"
                name="button2"
                value="transfer"
                onclick="updateMouseSetting('button2', 'transfer')"
                checked
              /> Transfer</label
            >
            <label
              ><input
                type="radio"
                name="button2"
                value="adjust"
                onclick="updateMouseSetting('button2', 'adjust')"
              /> Adjust</label
            >
          </div>
        </div>
      </div>
    </div>

    <div class="mouse-sliders">
      <div class="mouse-slider-row">
        <span>Double-click:</span>
        <input
          type="range"
          min="0"
          max="1"
          step="0.1"
          value="0.5"
          oninput="updateMouseSetting('doubleClick', this.value); this.nextElementSibling.textContent = this.value"
        />
        <span>0.5</span>
      </div>
      <div class="mouse-slider-row">
        <span>Acceleration:</span>
        <input
          type="range"
          min="0"
          max="4"
          step="0.5"
          value="2"
          oninput="updateMouseSetting('acceleration', this.value); this.nextElementSibling.textContent = this.value"
        />
        <span>2</span>
      </div>
      <div class="mouse-slider-row">
        <span>Threshold:</span>
        <input
          type="range"
          min="0"
          max="8"
          step="1"
          value="4"
          oninput="updateMouseSetting('threshold', this.value); this.nextElementSibling.textContent = this.value"
        />
        <span>4</span>
      </div>
    </div>
  </div>

  <div class="cde-actionbar">
    <button class="cde-btn cde-btn-default" onclick="styleManager.closeMouse()">OK</button>
    <button class="cde-btn" onclick="styleManager.closeMouse()">Cancel</button>
  </div>
</div>

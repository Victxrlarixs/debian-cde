---
import WindowControls from '../../common/WindowControls.astro';
---

<div class="cde-retro-modal" id="styleManagerBackdrop">
  <div class="titlebar" id="styleManagerBackdropTitlebar">
    <span class="titlebar-text">Style Manager - Backdrop</span>
    <WindowControls windowId="styleManagerBackdrop" closeFunction="styleManager.closeBackdrop" />
  </div>

  <div class="modal-body">
    <p>Select a backdrop pattern or image:</p>

    <div class="backdrop-grid">
      <!-- Images Only -->
      <div
        class="backdrop-preset backdrop-preset-marble"
        data-type="image"
        data-value="/backdrops/Marble.png"
        onclick="styleManager.backdrop.update('image', '/backdrops/Marble.png'); styleManager.backdrop.syncUI()"
        title="Marble"
      >
      </div>
      <div
        class="backdrop-preset backdrop-preset-toronto"
        data-type="image"
        data-value="/backdrops/Toronto.png"
        onclick="styleManager.backdrop.update('image', '/backdrops/Toronto.png'); styleManager.backdrop.syncUI()"
        title="Toronto"
      >
      </div>
      <div
        class="backdrop-preset backdrop-preset-circuit"
        data-type="image"
        data-value="/backdrops/CircuitBoards.png"
        onclick="styleManager.backdrop.update('image', '/backdrops/CircuitBoards.png'); styleManager.backdrop.syncUI()"
        title="Circuit"
      >
      </div>
    </div>
  </div>

  <div class="cde-statusbar">
    <div class="cde-statusleft">Backdrop</div>
    <div class="cde-statusright" id="backdropStatus">Ready</div>
  </div>

  <div class="cde-actionbar">
    <button class="cde-btn cde-btn-default" onclick="styleManager.closeBackdrop()">OK</button>
    <button class="cde-btn" onclick="styleManager.closeBackdrop()">Cancel</button>
    <button class="cde-btn" onclick="styleManager.showMessage('Help not implemented')">Help</button>
  </div>
</div>

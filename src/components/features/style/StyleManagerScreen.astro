---
import WindowControls from '../../common/WindowControls.astro';
import WindowMinimize from '../../common/WindowMinimize.astro';
---

<div class="cde-retro-modal" id="styleManagerScreen">
  <div
    class="titlebar"
    id="styleManagerScreenTitlebar"
    onmousedown="window.drag(event, 'styleManagerScreen')"
  >
    <WindowMinimize windowId="styleManagerScreen" />
    <span class="titlebar-text">Style Manager - Screen</span>
    <WindowControls
      windowId="styleManagerScreen"
      closeFunction="styleManager.closeScreen"
      disableMaximize={true}
    />
  </div>

  <div class="modal-body">
    <div class="cde-modal-field">
      <label class="cde-modal-label">Saver Timeout (minutes):</label>
      <select
        class="cde-modal-input"
        data-key="saverTimeout"
        onchange="styleManager.screen.update('saverTimeout', parseInt(this.value)); styleManager.screen.syncUI()"
      >
        <option value="0">Off (None)</option>
        <option value="1">1 minute</option>
        <option value="5">5 minutes</option>
        <option value="15">15 minutes</option>
        <option value="30">30 minutes</option>
      </select>
    </div>

    <div class="cde-modal-field">
      <label class="cde-modal-label">Icon Style:</label>
      <select
        class="cde-modal-input"
        data-key="iconStyle"
        onchange="styleManager.screen.update('iconStyle', this.value); styleManager.screen.syncUI()"
      >
        <option value="standard">Standard (High Detail)</option>
        <option value="classic">Classic (Simulated 4-Bit)</option>
      </select>
    </div>
  </div>

  <div class="cde-statusbar">
    <div class="cde-statusleft">Screen</div>
    <div class="cde-statusright" id="screenStatus">Ready</div>
  </div>

  <div class="cde-actionbar">
    <button class="cde-btn cde-btn-default" onclick="styleManager.closeScreen()">OK</button>
    <button class="cde-btn" onclick="styleManager.closeScreen()">Cancel</button>
    <button class="cde-btn" onclick="styleManager.showMessage('Help not implemented')">Help</button>
  </div>
</div>

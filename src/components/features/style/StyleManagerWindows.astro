---
import WindowControls from '../../common/WindowControls.astro';
import WindowMinimize from '../../common/WindowMinimize.astro';
---

<div class="cde-retro-modal style-manager-window" id="styleManagerWindow">
  <div
    class="titlebar"
    id="styleManagerWindowTitlebar"
    onmousedown="window.drag(event, 'styleManagerWindow')"
  >
    <WindowMinimize windowId="styleManagerWindow" />
    <span class="titlebar-text">Style Manager - Window</span>
    <WindowControls
      windowId="styleManagerWindow"
      closeFunction="styleManager.closeWindow"
      disableMaximize={true}
    />
  </div>

  <div class="modal-body">
    <div class="window-icon-container">
      <img src="/icons/apps/org.xfce.xfwm4.png" alt="Window" width="48" height="48" />
    </div>

    <div class="window-section-title">Window Behavior</div>

    <div class="window-row">
      <input
        type="checkbox"
        id="window-point"
        onclick="styleManager.windowBehavior.update('pointToFocus', this.checked); styleManager.windowBehavior.syncUI()"
      />
      <label for="window-point">Point In Window To Make Active</label>
    </div>

    <div class="window-row">
      <input
        type="checkbox"
        id="window-click"
        onclick="styleManager.windowBehavior.update('clickToFocus', this.checked); styleManager.windowBehavior.syncUI()"
      />
      <label for="window-click">Click In Window To Make Active</label>
    </div>

    <div class="window-row">
      <input
        type="checkbox"
        id="window-raise"
        onclick="styleManager.windowBehavior.update('raiseOnActive', this.checked); styleManager.windowBehavior.syncUI()"
      />
      <label for="window-raise">Raise Window When Made Active</label>
    </div>

    <div class="window-section-title">Window Icons</div>

    <div class="window-row">
      <input
        type="checkbox"
        id="window-show"
        onclick="styleManager.windowBehavior.update('opaqueDragging', this.checked); styleManager.windowBehavior.syncUI()"
      />
      <label for="window-show">Opaque Dragging (Show Contents)</label>
    </div>

    <div class="window-row">
      <input
        type="checkbox"
        id="window-iconbox"
        onclick="styleManager.windowBehavior.update('useIconBox', this.checked); styleManager.windowBehavior.syncUI()"
      />
      <label for="window-iconbox">Use Icon Box</label>
    </div>
  </div>

  <div class="cde-actionbar">
    <button class="cde-btn cde-btn-default" onclick="styleManager.closeWindow()">OK</button>
    <button class="cde-btn" onclick="styleManager.closeWindow()">Cancel</button>
    <button class="cde-btn" onclick="styleManager.closeWindow()">Help</button>
  </div>
</div>

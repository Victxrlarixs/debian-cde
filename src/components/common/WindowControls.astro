---
// src/components/common/WindowControls.astro
export interface Props {
  windowId: string;
  closeFunction: string;
  disableMaximize?: boolean;
}

const { windowId, closeFunction, disableMaximize = false } = Astro.props;
---

<div class="window-controls-right">
  {
    !disableMaximize && (
      <div class="max-btn" onclick={`maximizeWindow('${windowId}')`} title="Maximize">
        <img src="/icons/ui/maximize-inactive.png" alt="Maximize" />
      </div>
    )
  }
  <div class="close-btn" onclick={`${closeFunction}()`} title="Close">
    <img src="/icons/ui/window-close.png" alt="Close" />
  </div>
</div>

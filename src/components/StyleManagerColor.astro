---
import WindowControls from './common/WindowControls.astro';
---

<div class="cde-retro-modal style-manager-color" id="styleManagerColor">
  <div class="titlebar" id="styleManagerColorTitlebar">
    <span class="titlebar-text">Style Manager - Color</span>
    <WindowControls
      windowId="styleManagerColor"
      closeFunction="styleManager.closeColor"
      disableMaximize={true}
    />
  </div>

  <div class="modal-body">
    <div class="color-palettes-section">
      <h4 class="color-palettes-title">Palettes</h4>
      <div class="color-palette-scroll">
        <button class="cde-preset color-palette-item" data-scheme="platinum">Platinum</button>
        <button class="cde-preset color-palette-item" data-scheme="olive">Olive</button>
        <button class="cde-preset color-palette-item" data-scheme="marine">Marine</button>
        <button class="cde-preset color-palette-item" data-scheme="sand">Sand</button>
        <button class="cde-preset color-palette-item" data-scheme="midnight">Midnight</button>
        <button class="cde-preset color-palette-item" data-scheme="cobalt">Cobalt</button>
        <button class="cde-preset color-palette-item" data-scheme="forest">Forest</button>
        <button class="cde-preset color-palette-item" data-scheme="sunset">Sunset</button>
        <button class="cde-preset color-palette-item" data-scheme="amber">Amber</button>
        <button class="cde-preset color-palette-item" data-scheme="monochrome">Mono</button>
      </div>
    </div>
    <div class="color-swatches-row">
      <button
        class="color-swatch-btn"
        style="background-color: var(--topbar-color, #c6bdb3);"
        onclick="document.getElementById('color-topbar').click()"></button>
      <input
        type="color"
        id="color-topbar"
        value="#c6bdb3"
        data-var="--topbar-color"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--dock-color, #e6e1d8);"
        onclick="document.getElementById('color-dock').click()"></button>
      <input
        type="color"
        id="color-dock"
        value="#e6e1d8"
        data-var="--dock-color"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--modal-bg, #dcd6cc);"
        onclick="document.getElementById('color-modal-bg').click()"></button>
      <input
        type="color"
        id="color-modal-bg"
        value="#dcd6cc"
        data-var="--modal-bg"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--dock-icon-bg, #bfb9ad);"
        onclick="document.getElementById('color-dock-icon-bg').click()"></button>
      <input
        type="color"
        id="color-dock-icon-bg"
        value="#bfb9ad"
        data-var="--dock-icon-bg"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--button-bg, #bfb6aa);"
        onclick="document.getElementById('color-button-bg').click()"></button>
      <input
        type="color"
        id="color-button-bg"
        value="#bfb6aa"
        data-var="--button-bg"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--terminal-bg-color, #070b0d);"
        onclick="document.getElementById('color-terminal-bg').click()"></button>
      <input
        type="color"
        id="color-terminal-bg"
        value="#070b0d"
        data-var="--terminal-bg-color"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />

      <button
        class="color-swatch-btn"
        style="background-color: var(--terminal-text-color, #c7fbe3);"
        onclick="document.getElementById('color-terminal-text').click()"></button>
      <input
        type="color"
        id="color-terminal-text"
        value="#c7fbe3"
        data-var="--terminal-text-color"
        style="display: none;"
        oninput="this.previousElementSibling.style.backgroundColor = this.value"
      />
    </div>

    <div class="color-default-section">
      <button class="cde-btn color-default-btn" onclick="styleManager.resetColor()">Default</button>
    </div>
  </div>

  <div class="cde-actionbar">
    <button
      class="cde-btn cde-btn-default"
      onclick="styleManager.applyColor(); styleManager.closeColor()">OK</button
    >
    <button class="cde-btn" onclick="styleManager.closeColor()">Cancel</button>
  </div>
</div>

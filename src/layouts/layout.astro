---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Retro Debian CDE Desktop UI inspirado en Unix y Linux." />
    <meta name="keywords" content="Debian, Linux, CDE, Retro Desktop, Unix" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Critical CSS for Boot Sequence - Inlined to prevent Render Blocking -->
    <style is:inline>
      :root {
        --topbar-color: #8b8ba5;
        --window-color: #8b8ba5;
        --titlebar-color: #a54a4a;
        --titlebar-text-color: #ffffff;
        --terminal-bg-color: #000000;
        --terminal-text-color: #00ff00;
        --font-family-base: 'Fixedsys', 'Lucida Console', monospace;
        --font-size-base: 12px;
        --font-weight-normal: 400;
        --line-height-base: 1.45;
      }
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #000;
        color: #aaa;
        overflow: hidden;
        font-family: var(--font-family-base);
      }
      #debian-boot-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000;
        color: #aaa;
        z-index: 99999;
        padding: 10px;
        box-sizing: border-box;
      }
    </style>

    <link rel="shortcut icon" type="image/x-icon" href="/icons/favicon.ico" />

    <!-- Defer non-critical CSS -->
    <link rel="stylesheet" href="/css/core.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="/css/components.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="/css/app.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="/css/responsive.css" media="print" onload="this.media='all'" />

    <noscript>
      <link rel="stylesheet" href="/css/core.css" />
      <link rel="stylesheet" href="/css/components.css" />
      <link rel="stylesheet" href="/css/app.css" />
      <link rel="stylesheet" href="/css/responsive.css" />
    </noscript>
  </head>
  <body>
    <slot />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" defer
    ></script>

    <script>
      import '/src/scripts/core/index.ts';
    </script>
  </body>
</html>

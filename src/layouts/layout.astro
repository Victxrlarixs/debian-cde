---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A modern Progressive Web App that brings 1990s Unix to any device. Desktop, tablet, phone—the experience adapts. Touch gestures on mobile. Keyboard shortcuts on desktop. Always authentic."
    />
    <meta
      name="keywords"
      content="CDE, Common Desktop Environment, Unix, Motif, Retro Computing, 90s Desktop, Workstation, XPM, Debian"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#4d648d" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Time Capsule" />
    <meta
      property="og:description"
      content="A modern Progressive Web App that brings 1990s Unix to any device. Desktop, tablet, phone—the experience adapts. Touch gestures on mobile. Keyboard shortcuts on desktop. Always authentic."
    />
    <meta property="og:image" content="/icons/computer.png" />

    <title>{title}</title>

    <!-- Critical CSS for Boot Sequence - Inlined to prevent Render Blocking -->
    <style is:inline>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background-color: #000;
        color: #aaaaaa;
        font-family: 'DejaVu Sans Mono', monospace;
        overflow: hidden;
      }
      #debian-boot-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000000;
        z-index: 99999;
        padding: 10px;
        box-sizing: border-box;
      }
      .boot-logo {
        color: #ff8888;
        white-space: pre;
        line-height: 1.2;
        margin-bottom: 20px;
      }
      #debian-boot-screen .header {
        color: #00aa00;
        border-bottom: 1px solid #333333;
        padding-bottom: 5px;
        margin-bottom: 10px;
        font-weight: bold;
      }
    </style>

    <link rel="icon" type="image/png" href="/icons/computer.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="apple-touch-icon" href="/icons/computer.png" />

    <!-- Defer non-critical CSS -->
    <link rel="stylesheet" href="/css/main.css" media="print" onload="this.media='all'" />

    <noscript>
      <link rel="stylesheet" href="/css/main.css" />
    </noscript>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js" defer
    ></script>

    <script>
      import '/src/scripts/core/index.ts';
    </script>
  </head>
  <body>
    <!-- Skip Links for Screen Readers -->
    <a href="#desktop-ui" class="skip-link">Skip to main content</a>
    <a href="#cde-panel" class="skip-link">Skip to panel</a>

    <slot />
  </body>
</html>
